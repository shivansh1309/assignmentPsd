<?xml version = "1.0"?>
<!-- default.xml-->
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <move element="store.settings.language" destination="selectStore" />
        <move element="register-link" destination="createAccount" />
        <move element="authorization-link" destination="login" />
        <move element="minicart" destination="userCart" />
        <move element="logo" destination="displayTitle" />

        <referenceContainer name="header.panel" remove="true" />

        <referenceContainer name="header.container">
            <container name = "firstHeader" label = "firstHeader" htmlTag="div" htmlClass = "firstHeader" before ="-">
                <container name="selectStore"  label="selectStore" htmlTag="div" htmlClass="selectStore" />
                <container name="userArea" label="userArea" htmlTag="div" htmlClass = "userArea">
                    <container name="loginRegistration" label="loginRegistration" htmlTag="div" htmlClass="loginRegistration">
                        <container name="createAccount" label="createAccount" htmlTag="div" htmlClass="createAccount">
                            <referenceBlock name="register-link">
                                <arguments>
                                <argument name="label" xsi:type="string" translate="true">Register /</argument></arguments>
                            </referenceBlock>
                        </container>
                        <container name="login" label="login" htmlTag="div" htmlClass="login">
                            <referenceBlock name="authorization-link">
                                <arguments>
                                <argument name="label" xsi:type="string" translate="true">SIGN IN</argument></arguments>
                            </referenceBlock>
                        </container>
                    </container>
                    <container name="userCart" label="userCart" htmlTag="div" htmlClass="userCart" />
                </container>
            </container>

            <container name="secondHeader" label="secondHeader" htmlTag="div" htmlClass="secondHeader" after="firstHeader">
                <container name="title" label="title" htmlTag="div" htmlClass="title">
                   <container name="displayTitle" label="displayTitle" htmlTag="div" htmlClass="displayTitle" />
                </container>
                <container name="menu" label="menu" htmlTag="div" htmlClass="menu">
                    <block class="Magento\Framework\View\Element\Template" name="display_Menu" template="Magento_Theme::display_Menu.phtml" />
                </container>
                <container name="searchLabel" label="searchLabel" htmlTag="div" htmlClass="searchLabel">
                    <block class="Magento\Framework\View\Element\Template" name="search_Label" template="Magento_Theme::display_Menu.phtml" />
                </container>
            </container>
        </referenceContainer>
    </body>
</page>